{
  "name": "berlioz/core",
  "type": "library",
  "description": "Berlioz Framework Core",
  "license": "MIT",
  "homepage": "http://getberlioz.com",
  "authors": [
    {
      "name": "Ronan Giron",
      "email": "ronan@getberlioz.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Berlioz\\Core\\": "src/"
    },
    "exclude-from-classmap": [
      "/tests/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Berlioz\\Core\\Tests\\": "tests/",
      "Berlioz\\Core\\TestProject\\": "tests/_envTest/src/"
    },
    "exclude-from-classmap": [
      "/tests/_envTest/"
    ]
  },
  "require": {
    "php": "^7.1 || ^8.0",
    "ext-intl": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-zlib": "*",
    "berlioz/config": "^1.0",
    "berlioz/helpers": "^1.0",
    "berlioz/service-container": "^1.0",
    "psr/log": "^1.0.0",
    "psr/simple-cache": "^1.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5 || ^8.0 || ^9.0"
  },
  "provide": {
    "psr/container-implementation": "^1.0",
    "psr/log-implementation": "^1.0",
    "psr/simple-cache-implementation": "^1.0"
  }
}
